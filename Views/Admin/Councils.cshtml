@model IEnumerable<Duan_CNPM.Models.Council>
@{
    ViewData["Title"] = "Quản lý hội đồng";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h2>Quản lý hội đồng</h2>
            <a href="@Url.Action("CreateCouncil")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Tạo hội đồng mới
            </a>
        </div>
    </div>

    <!-- Councils List -->
    <div class="row">
        @foreach (var council in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between">
                        <h5 class="mb-0">@council.Name</h5>
                        <span class="badge bg-light text-dark">
                            @council.Projects.Count đề tài
                        </span>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong><i class="bi bi-calendar"></i> Ngày bảo vệ:</strong>
                            @council.DefenseDate.ToString("dd/MM/yyyy HH:mm")
                        </p>
                        <p>
                            <strong><i class="bi bi-geo-alt"></i> Địa điểm:</strong>
                            @council.Location
                        </p>
                        <p>
                            <strong><i class="bi bi-people"></i> Thành viên:</strong>
                            @council.CouncilMembers.Count người
                        </p>

                        <hr>

                        <div class="mb-2">
                            <strong>Danh sách thành viên:</strong>
                        </div>
                        <ul class="list-unstyled mb-3">
                            @foreach (var member in council.CouncilMembers)
                            {
                                <li class="mb-1">
                                    <i class="bi bi-person-badge"></i>
                                    @member.Professor.FullName
                                    <span class="badge bg-info">@member.Role</span>
                                </li>
                            }
                        </ul>

                        <div class="d-flex gap-2">
                            <a href="@Url.Action("CouncilDetail", new { id = council.CouncilID })"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted small">
                        Tạo ngày: @council.CreatedDate.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Chưa có hội đồng nào
        </div>
    }
</div>