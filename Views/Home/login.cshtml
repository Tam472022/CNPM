@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #dff6ff, #a8dfff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
            max-width: 680px;
            width: 100%;
        }

        .login-header {
            background: linear-gradient(135deg, #0d1b3d 0%, #1a3a6d 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .login-header h2 {
            margin: 0;
            font-weight: 600;
        }

        .login-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
        }

        .login-body {
            padding: 30px;
        }

        .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 12px 15px;
            font-size: 15px;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-login-primary {
            background: linear-gradient(135deg, #0d1b3d 0%, #1a3a6d 100%);
            border: none;
            color: white;
            padding: 12px 40px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: transform 0.2s;
        }

        .btn-login-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-login-link {
            background: transparent;
            text-align: center;
            border: 2px solid #1e3c72;
            color: #1e3c72;
            padding: 10px 30px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
        }

        .btn-login-link:hover {
            background: #1e3c72;
            color: white;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .btn-secondary {
            background: transparent;
            border: 2px solid #1e3c72;
            color: #1e3c72;
            padding: 10px 30px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
        }

        .btn-secondary:hover {
            background: #1e3c72;
            color: white;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="login-header">
            <h2><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</h2>
            <p>Nhập thông tin để truy cập hệ thống quản lý đồ án</p>
        </div>

        <div class="login-body">
            @if (ViewBag.Message != null)
            {
                var isSuccess = ViewBag.Message.ToString().Contains("thành công");
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                    <i class="bi @(isSuccess ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill")"></i>
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post" action="/Home/Login">
                <div class="mb-3">
                    <label for="username" class="form-label"><i class="bi bi-person"></i> Tên đăng nhập</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label"><i class="bi bi-lock"></i> Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-login-primary w-100 text-nowrap">
                            <i class="bi bi-check-circle"></i> Đăng nhập
                        </button>
                    </div>
                    <div class="col-md-6 mb-2">
                        <a href="@Url.Action("Register", "Home")" class="btn btn-login-link w-100 text-nowrap">
                            <i class="bi bi-person-plus-fill"></i> Chưa có tài khoản? Đăng ký
                        </a>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100 text-nowrap">
                            <i class="bi bi-house-fill"></i> Quay về trang chủ
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
