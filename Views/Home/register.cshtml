@{
    Layout = null;
    ViewData["Title"] = "Đăng ký tài khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #dff6ff, #a8dfff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
        }

        .register-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
            max-width: 850px;
            width: 100%;
        }

        .register-header {
            background: linear-gradient(135deg,#0d1b3d 0%,#1a3a6d 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

            .register-header h2 {
                margin: 0;
                font-weight: 600;
            }

            .register-header p {
                margin: 10px 0 0 0;
                opacity: 0.9;
            }

        .register-body {
            padding: 40px;
        }

        .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 12px 15px;
            font-size: 15px;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102,126,234,0.25);
            }

        .btn-register {
            background: linear-gradient(135deg,#0d1b3d 0%,#1a3a6d 100%);
            border: none;
            color: white;
            padding: 12px 40px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: transform 0.2s;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102,126,234,0.4);
                color: white;
            }

        .btn-login {
            background: transparent;
            border: 2px solid #1e3c72;
            color: #1e3c72;
            padding: 10px 30px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background: #1e3c72;
                color: white;
            }

        .additional-fields {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            display: none;
        }

        .password-strength {
            height: 6px;
            background-color: #e9ecef;
            border-radius: 4px;
            margin-top: 8px;
            overflow: hidden;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s ease, background-color 0.3s ease;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .required {
            color: #dc3545;
        }

        .btn-secondary {
            background: transparent;
            border: 2px solid #1e3c72;
            color: #1e3c72;
            padding: 10px 30px;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
        }

            .btn-secondary:hover {
                background: linear-gradient(135deg,#0d1b3d 0%,#1a3a6d 100%);
                color: white;
            }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h2><i class="bi bi-person-plus-fill"></i> Đăng ký tài khoản</h2>
            <p>Tạo tài khoản mới để sử dụng hệ thống quản lý đồ án</p>
        </div>

        <div class="register-body">
            @if (ViewBag.Message != null)
            {
                var isSuccess = ViewBag.Message.ToString().Contains("thành công");
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                    <i class="bi @(isSuccess ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill")"></i>
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post" action="/Home/Register" id="registerForm" onsubmit="return validateForm()">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Username" class="form-label"><i class="bi bi-person"></i> Tên đăng nhập <span class="required">*</span></label>
                        <input type="text" class="form-control" id="Username" name="Username" required minlength="3" maxlength="50">
                        <small class="text-muted">3-50 ký tự, không có khoảng trắng</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="FullName" class="form-label"><i class="bi bi-person-badge"></i> Họ và tên <span class="required">*</span></label>
                        <input type="text" class="form-control" id="FullName" name="FullName" required maxlength="100">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Password" class="form-label"><i class="bi bi-lock"></i> Mật khẩu <span class="required">*</span></label>
                        <input type="password" class="form-control" id="Password" name="Password" required minlength="6" onkeyup="checkPasswordStrength()">
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bar" id="strengthBar"></div>
                        </div>
                        <small class="text-muted">Tối thiểu 6 ký tự</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="ConfirmPassword" class="form-label"><i class="bi bi-lock-fill"></i> Xác nhận mật khẩu <span class="required">*</span></label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required minlength="6">
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="Role" class="form-label"><i class="bi bi-shield-check"></i> Vai trò <span class="required">*</span></label>
                        <select class="form-select" id="Role" name="Role" required onchange="showAdditionalFields()">
                            <option value="">-- Chọn vai trò --</option>
                            <option value="Student">Sinh viên</option>
                            <option value="Professor">Giảng viên</option>
                        </select>
                    </div>
                </div>

                <!-- Student fields -->
                <div id="studentFields" class="additional-fields">
                    <h6 class="mb-3"><i class="bi bi-info-circle"></i> Thông tin sinh viên</h6>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="StudentCode" class="form-label">Mã sinh viên</label>
                            <input type="text" class="form-control" id="StudentCode" name="StudentCode" maxlength="20" placeholder="Ví dụ: 106221234">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="StudentMajor" class="form-label">Chuyên ngành</label>
                            <input type="text" class="form-control" id="StudentMajor" name="StudentMajor" maxlength="100" placeholder="Ví dụ: Kĩ thuật máy tính">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="StudentPhone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="StudentPhone" name="StudentPhone" maxlength="20" placeholder="Ví dụ: 0123456789">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="StudentEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="StudentEmail" name="StudentEmail" maxlength="100" placeholder="Ví dụ: student@example.com">
                    </div>
                </div>

                <!-- Professor fields -->
                <div id="professorFields" class="additional-fields">
                    <h6 class="mb-3"><i class="bi bi-info-circle"></i> Thông tin giảng viên</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="ProfEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="ProfEmail" name="ProfessorEmail" maxlength="100" placeholder="Ví dụ: professor@example.com">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ProfPhone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="ProfPhone" name="ProfessorPhone" maxlength="20" placeholder="Ví dụ: 0123456789">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="ProfMajor" class="form-label">Chuyên môn</label>
                        <input type="text" class="form-control" id="ProfMajor" name="ProfessorMajor" maxlength="100" placeholder="Ví dụ: Hệ thống nhúng - IoT">
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-register"><i class="bi bi-check-circle"></i> Đăng ký</button>
                    </div>
                    <div class="col-md-6 mb-2">
                        <a href="@Url.Action("Login", "Home")" class="btn btn-login"><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</a>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100"><i class="bi bi-house-fill"></i> Quay về trang chủ</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Xem các role:
        function showAdditionalFields() {
            const role = document.getElementById('Role').value;
            document.getElementById('studentFields').style.display = role === 'Student' ? 'block' : 'none';
            document.getElementById('professorFields').style.display = role === 'Professor' ? 'block' : 'none';
        }
                // Kiểm tra độ mạnh mật khẩu
        function checkPasswordStrength() {
            const password = document.getElementById('Password').value;
            const strengthBar = document.getElementById('strengthBar');

            let strength = 0;

            // Kiểm tra độ dài
            if (password.length >= 6) strength++;
            if (password.length >= 10) strength++;
            if (password.length >= 14) strength++;

            // Kiểm tra ký tự
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/\d/.test(password)) strength++;
            if (/[^a-zA-Z0-9]/.test(password)) strength++; // ký tự đặc biệt

            // Xác định % và màu
            let percentage = 0;
            let color = '#e9ecef'; // màu mặc định khi trống

            if (password.length > 0) {
                if (strength <= 2) {
                    percentage = 25;
                    color = '#dc3545'; // đỏ
                } else if (strength <= 4) {
                    percentage = 50;
                    color = '#ffc107'; // vàng
                } else if (strength <= 5) {
                    percentage = 75;
                    color = '#0dcaf0'; // xanh dương nhạt
                } else {
                    percentage = 100;
                    color = '#198754'; // xanh lá
                }
            }

            // Cập nhật thanh strength bar
            strengthBar.style.width = percentage + '%';
            strengthBar.style.backgroundColor = color;
        }


        function validateForm() {
            const username = document.getElementById('Username').value.trim();
            const password = document.getElementById('Password').value;
            const confirm = document.getElementById('ConfirmPassword').value;
            const role = document.getElementById('Role').value;
            if (/\s/.test(username)) {
                alert("Tên đăng nhập không được chứa khoảng trắng!");
                return false;
            }
            if (password.length < 6) {
                alert("Mật khẩu phải >= 6 ký tự");
                return false;
            }
            if (password !== confirm) {
                alert("Mật khẩu xác nhận không khớp!");
                return false;
            }
            if (!role) {
                alert("Vui lòng chọn vai trò!");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>