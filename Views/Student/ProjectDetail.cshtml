    <script>
        // Validate input khi nhập
        function validateProgressInput(input) {
            const currentPercentage = parseInt(document.getElementById('currentPercentage').value) || 0;
            const newPercentage = parseInt(input.value) || 0;
            const errorDiv = document.getElementById('percentageError');

            if (newPercentage < 0) {
                input.value = 0;
                errorDiv.textContent = 'Tiến độ không thể âm';
                errorDiv.style.display = 'block';
            } else if (newPercentage > 100) {
                input.value = 100;
                errorDiv.textContent = 'Tiến độ tối đa là 100%';
                errorDiv.style.display = 'block';
            } else if (newPercentage < currentPercentage) {
                errorDiv.textContent = `Tiến độ không thể giảm xuống dưới ${currentPercentage}%`;
                errorDiv.style.display = 'block';
            } else if (newPercentage == currentPercentage) {
                errorDiv.textContent = `Tiến độ hiện tại đã là ${currentPercentage}%`;
                errorDiv.style.display = 'block';
            } else {
                errorDiv.style.display = 'none';
            }
        }

        function submitProgress() {
            const projectId = document.getElementById('projectId').value;
            const title = document.getElementById('progressTitle').value.trim();
            const description = document.getElementById('progressDescription').value.trim();
            const percentage = parseInt(document.getElementById('progressPercentage').value);
            const currentPercentage = parseInt(document.getElementById('currentPercentage').value) || 0;

            // Validation
            if (!title) {
                alert('Vui lòng nhập tiêu đề');
                return;
            }

            if (!description) {
                alert('Vui lòng nhập mô tả');
                return;
            }

            if (isNaN(percentage) || percentage < 0 || percentage > 100) {
                alert('Tiến độ phải từ 0-100%');
                return;
            }

            if (percentage < currentPercentage) {
                alert(`Tiến độ không thể giảm xuống! Tiến độ hiện tại là ${currentPercentage}%`);
                return;
            }

            if (percentage == currentPercentage) {
                alert(`Tiến độ hiện tại đã là ${currentPercentage}%. Vui lòng cập nhật tiến độ cao hơn.`);
                return;
            }

            // Disable button và hiển thị loading
            const submitBtn = event.target;
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang lưu...';

            fetch('/Student/UpdateProgress', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `projectId=${projectId}&title=${encodeURIComponent(title)}&description=${encodeURIComponent(description)}&percentage=${percentage}`
            })
            .then(res => res.json())
            .then(data => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;

                alert(data.message);
                if (data.success) {
                    location.reload();
                }
            })
            .catch(err => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
                console.error(err);
                alert('Có lỗi xảy ra khi cập nhật tiến độ');
            });
        }

        function submitUpload() {
            const projectId = document.getElementById('uploadProjectId').value;
            const fileInput = document.getElementById('fileUpload');
            const fileType = document.getElementById('fileType').value;

            if (!fileInput.files.length) { alert("Chưa chọn file"); return; }

            const formData = new FormData();
            formData.append('projectId', projectId);
            formData.append('file', fileInput.files[0]);
            formData.append('fileType', fileType);

            fetch('/Student/UploadFile', {
                method: 'POST',
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(err => console.error(err));
        }

        function deleteProject(projectId) {
            if (!confirm("Bạn có chắc chắn muốn xóa đề tài này?")) return;

            fetch('/Student/DeleteProject', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `projectId=${projectId}`
            })
            .then(res => res.json())
            .then(data => {
                alert(data.message);
                if (data.success) window.location.href = '/Student/Dashboard';
            })
            .catch(err => console.error(err));
        }

        // Xóa file
        function deleteFile(fileId) {
            if (!confirm("Bạn có chắc chắn muốn xóa file này?")) return;

            fetch('/Student/DeleteFile', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `fileId=${fileId}`
            })
            .then(res => res.json())
            .then(data => {
                alert(data.message);
                if (data.success) {
                    document.getElementById(`file-row-${fileId}`).remove();
                    const tbody = document.querySelector('table tbody');
                    if (tbody && tbody.children.length === 0) {
                        location.reload();
                    }
                }
            })
            .catch(err => {
                console.error(err);
                alert("Lỗi khi xóa file");
            });
        }

        function showUpdateFileModal(fileId, fileName) {
            document.getElementById('updateFileId').value = fileId;
            document.getElementById('currentFileName').textContent = fileName;
            document.getElementById('newFileInput').value = '';

            const modal = new bootstrap.Modal(document.getElementById('updateFileModal'));
            modal.show();
        }

        function submitUpdateFile() {
            const fileId = document.getElementById('updateFileId').value;
            const fileInput = document.getElementById('newFileInput');

            if (!fileInput.files.length) {
                alert("Vui lòng chọn file mới");
                return;
            }

            const formData = new FormData();
            formData.append('fileId', fileId);
            formData.append('newFile', fileInput.files[0]);

            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang xử lý...';

            fetch('/Student/UpdateFile', {
                method: 'POST',
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                btn.disabled = false;
                btn.innerHTML = originalText;

                alert(data.message);
                if (data.success) {
                    document.getElementById(`filename-${fileId}`).textContent = data.newFileName;
                    document.getElementById(`filesize-${fileId}`).textContent = data.newFileSize + ' KB';

                    const modal = bootstrap.Modal.getInstance(document.getElementById('updateFileModal'));
                    modal.hide();

                    setTimeout(() => location.reload(), 1000);
                }
            })
            .catch(err => {
                btn.disabled = false;
                btn.innerHTML = originalText;
                console.error(err);
                alert("Lỗi khi cập nhật file");
            });
        }

        function validateFileSize(input, maxSize) {
            if (input.files && input.files[0]) {
                if (input.files[0].size > maxSize) {
                    alert('File quá lớn! Kích thước tối đa là ' + (maxSize / 1048576) + 'MB');
                    input.value = '';
                    return false;
                }
            }
            return true;
        }
    </script>
