@model Duan_CNPM.Models.Project
@{
    ViewData["Title"] = "Chi tiết đề tài";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12 d-flex align-items-center">
            <a href="@Url.Action("Dashboard", "Student")" class="btn btn-secondary me-3">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            @* Nút Xóa nằm bên cạnh, chỉ hiện nếu Pending hoặc Rejected *@
            @{
                var status = Model.Status?.Trim() ?? "";
                if (status.Equals("Pending", StringComparison.OrdinalIgnoreCase) ||
                status.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                {
                    <button class="btn btn-danger" onclick="deleteProject(@Model.ProjectID)">
                        <i class="bi bi-trash"></i> Xóa đề tài
                    </button>
                }
            }
        </div>
    </div>

    <div class="row">
        <!-- Project Info -->
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Title</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p>
                                <strong>Trạng thái:</strong>
                                @switch (status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning">Chờ duyệt</span>
                                        break;
                                    case "Approved":
                                        <span class="badge bg-info">Đã duyệt</span>
                                        break;
                                    case "InProgress":
                                        <span class="badge bg-primary">Đang thực hiện</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">Bị từ chối</span>
                                        break;
                                }
                            </p>
                            <p><strong>Năm học:</strong> @Model.Year - Học kỳ @Model.Semester</p>
                            <p><strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Giảng viên hướng dẫn:</strong> @(Model.Professor?.FullName ?? "Chưa có")</p>
                            <p><strong>Ngày bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</p>
                            @if (Model.DefenseDate.HasValue)
                            {
                                <p><strong>Ngày bảo vệ:</strong> @Model.DefenseDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            }
                            @if (Model.FinalScore.HasValue)
                            {
                                <p><strong>Điểm:</strong> <span class="badge bg-success fs-5">@Model.FinalScore.Value.ToString("F2")</span></p>
                            }
                        </div>
                    </div>

                    <hr>
                    <h5>Mô tả đề tài</h5>
                    <p class="text-justify">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.ProfessorComment))
                    {
                        <hr>
                        <h5>Nhận xét của giảng viên</h5>
                        <div class="alert alert-info">
                            <p class="mb-0">@Model.ProfessorComment</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Progress Updates -->
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tiến độ thực hiện</h5>
                    @{
                        if (status.Equals("Approved", StringComparison.OrdinalIgnoreCase) ||
                        status.Equals("InProgress", StringComparison.OrdinalIgnoreCase) ||
                        status.Equals("Completed", StringComparison.OrdinalIgnoreCase))
                        {
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#progressModal">
                                <i class="bi bi-plus-circle"></i> Cập nhật tiến độ
                            </button>
                        }
                        else if (status.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="text-warning fst-italic">
                                Đề tài đang chờ xét duyệt. Vui lòng chờ mới có thể cập nhật tiến độ.
                            </span>
                        }
                        else if (status.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="text-danger fst-italic">
                                Đề tài đã bị từ chối.
                            </span>
                        }
                    }
                </div>
                <div class="card-body">
                    @if (Model.ProjectProgresses != null && Model.ProjectProgresses.Any())
                    {
                        <div class="timeline">
                            @foreach (var progress in Model.ProjectProgresses.OrderByDescending(p => p.UpdateDate))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <h6>
                                            @progress.Title
                                            <span class="badge bg-info">@progress.Percentage%</span>
                                        </h6>
                                        <p class="mb-1">@progress.Description</p>
                                        <small class="text-muted">@progress.UpdateDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chưa có cập nhật tiến độ</p>
                    }
                </div>
            </div>

            <!-- Lịch sử nhận xét từ giảng viên -->
            <div class="card mb-3">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Nhận xét từ giảng viên</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProfessorComments != null && Model.ProfessorComments.Any())
                    {
                        <div class="comments-timeline">
                            @foreach (var comment in Model.ProfessorComments.OrderByDescending(c => c.CreatedDate))
                            {
                                <div class="comment-item mb-3 p-3 border-start border-4 border-warning bg-light">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <strong class="text-primary">
                                            <i class="bi bi-person-badge"></i> @comment.Professor.FullName
                                        </strong>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @comment.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    <p class="mb-0">@comment.CommentText</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chưa có nhận xét từ giảng viên</p>
                    }
                </div>
            </div>

            <!-- Files -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tài liệu đính kèm</h5>
                    @{
                        if (status.Equals("Approved", StringComparison.OrdinalIgnoreCase) ||
                        status.Equals("InProgress", StringComparison.OrdinalIgnoreCase) ||
                        status.Equals("Completed", StringComparison.OrdinalIgnoreCase))
                        {
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">
                                <i class="bi bi-upload"></i> Upload tài liệu
                            </button>
                        }
                        else if (status.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="text-warning fst-italic">
                                Đề tài đang chờ xét duyệt. Vui lòng chờ mới có thể upload tài liệu.
                            </span>
                        }
                        else if (status.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="text-danger fst-italic">
                                Đề tài đã bị từ chối.
                            </span>
                        }
                    }
                </div>
                <div class="card-body">
                    @if (Model.ProjectFiles != null && Model.ProjectFiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên file</th>
                                        <th>Loại</th>
                                        <th>Kích thước</th>
                                        <th>Ngày upload</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model.ProjectFiles.OrderByDescending(f => f.UploadDate))
                                    {
                                        <tr id="file-row-@file.FileID">
                                            <td>
                                                <i class="bi bi-file-earmark"></i>
                                                <span id="filename-@file.FileID">@file.FileName</span>
                                            </td>
                                            <td><span class="badge bg-secondary">@file.FileType</span></td>
                                            <td>
                                                <span id="filesize-@file.FileID">@((file.FileSize / 1024.0).ToString("F2")) KB</span>
                                            </td>
                                            <td>@file.UploadDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@file.FilePath" target="_blank" class="btn btn-info" title="Tải xuống">
                                                        <i class="bi bi-download"></i>
                                                    </a>

                                                    @* Chỉ cho phép sửa/xóa nếu chưa hoàn thành *@
                                                    @if (!status.Equals("Completed", StringComparison.OrdinalIgnoreCase))
                                                    {
                                                        <button class="btn btn-warning"
                                                                onclick="showUpdateFileModal(@file.FileID, '@file.FileName')"
                                                                title="Cập nhật file">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-danger"
                                                                onclick="deleteFile(@file.FileID)"
                                                                title="Xóa file">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">Chưa có tài liệu nào</p>
                    }
                </div>
            </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            @* Bạn có thể thêm thông tin hội đồng, scores, ... *@
        </div>
    </div>
</div>

    <!-- Progress Modal -->
    <div class="modal fade" id="progressModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cập nhật tiến độ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @{
                        var currentProgressPercentage = Model.ProjectProgresses?
                        .OrderByDescending(p => p.Percentage)
                        .FirstOrDefault()?.Percentage ?? 0;
                    }

                    @if (currentProgressPercentage > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Tiến độ hiện tại: @currentProgressPercentage%</strong>
                            <br>
                            <small>Bạn chỉ có thể cập nhật tiến độ từ @currentProgressPercentage% trở lên</small>
                        </div>
                    }

                    <form id="progressForm">
                        <input type="hidden" id="projectId" name="projectId" value="@Model.ProjectID">
                        <input type="hidden" id="currentPercentage" value="@currentProgressPercentage">

                        <div class="mb-3">
                            <label class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="progressTitle" name="title" required
                                   placeholder="Ví dụ: Hoàn thành thiết kế giao diện">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả chi tiết <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="progressDescription" name="description" rows="3" required
                                      placeholder="Mô tả chi tiết công việc đã hoàn thành..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                Phần trăm hoàn thành (%) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="number"
                                       class="form-control"
                                       id="progressPercentage"
                                       name="percentage"
                                       min="@(currentProgressPercentage + 1)"
                                       max="100"
                                       value="@(currentProgressPercentage < 100 ? currentProgressPercentage + 1 : 100)"
                                       required
                                       oninput="validateProgressInput(this)">
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="text-muted">
                                @if (currentProgressPercentage < 100)
                                {
                                    <text>Nhập từ @(currentProgressPercentage + 1)% đến 100%</text>
                                }
                                else
                                {
                                    <text>Bạn đã hoàn thành 100% tiến độ</text>
                                }
                            </small>
                            <div id="percentageError" class="text-danger small mt-1" style="display: none;"></div>
                        </div>

                        @if (currentProgressPercentage == 100)
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i>
                                Bạn đã hoàn thành 100% tiến độ! Chờ giảng viên đánh giá.
                            </div>
                        }
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button"
                            class="btn btn-primary"
                            onclick="submitProgress()"
                            @(currentProgressPercentage == 100 ? "disabled" : "")>
                        <i class="bi bi-send"></i> Lưu tiến độ
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Modal - CẬP NHẬT -->
    <div class="modal fade" id="uploadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upload tài liệu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="uploadForm" enctype="multipart/form-data">
                        <input type="hidden" id="uploadProjectId" name="projectId" value="@Model.ProjectID">
                        <div class="mb-3">
                            <label class="form-label">Chọn file</label>
                            <input type="file" class="form-control" id="fileUpload" name="file"
                                   required onchange="validateFileSize(this, 10485760)">
                            <small class="text-muted">Định dạng: PDF, DOC, DOCX, ZIP, RAR (Max 10MB)</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Loại tài liệu</label>
                            <select class="form-select" id="fileType" name="fileType" required>
                                <option value="Report">Báo cáo</option>
                                <option value="Code">Source code</option>
                                <option value="Poster">Poster</option>
                                <option value="Other">Khác</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="submitUpload()">Upload</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update File Modal -->
    <div class="modal fade" id="updateFileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Cập nhật tài liệu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="updateFileId">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> File hiện tại: <strong id="currentFileName"></strong>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chọn file mới</label>
                        <input type="file" class="form-control" id="newFileInput" required>
                        <small class="text-muted">File mới sẽ thay thế hoàn toàn file cũ. Định dạng: PDF, DOC, DOCX, ZIP, RAR (Max 10MB)</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-warning" onclick="submitUpdateFile()">
                        <i class="bi bi-upload"></i> Cập nhật
                    </button>
                </div>
            </div>
        </div>
    </div>

